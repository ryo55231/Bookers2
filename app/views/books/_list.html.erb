<!-- views/users/show.htmlのUserInfoの切り抜き部分  -->

     <h2>User Info</h2>
<div>
    <%= image_tag user.get_profile_image(100,100) %>
    <table>

  <tr>
    <th>name</th>
  <td><%= user.name %></td>
  </tr>

  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
    </tr>

</table>
      

  <p><%= link_to  edit_user_path(user),class:"btn btn-outline-secondary btn-lg btn-block" do %>
  <i class="fa-solid fa-user-gear"></i> <% end %></p>

</div>

<!-- views/books/new.htmlの切り抜き部分  -->
<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
  
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book", class: "btn btn-success" %>
  <% end %>